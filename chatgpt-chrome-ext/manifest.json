// manifest.json begins

{
  "manifest_version": 3,
  "name": "GPTtoCMD",
  "version": "1.0",
  "description": "Расширение для chrome, работающее в паре с десктопным приложением GPTtoCMD",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "https://chat.openai.com/*" ],
      "js": [ "content.js" ]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "https://chat.openai.com/*"
  ]
}
